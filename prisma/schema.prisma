generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Given {
  id          String      @id @default(uuid())
  name        String      @default("")
  description String
  photos      String[]    @default([])
  address     String
  contact     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  status     String?
  interests   Interest[]
}

model Interest {
  id              String   @id @default(uuid())
  note            String
  contact         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  shippingAddress String
  givenId         String
  givings         Given   @relation(fields: [givenId], references: [id])

   @@unique([contact, givenId])
}
