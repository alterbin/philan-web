generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Giving {
  id          String      @id @default(uuid())
  name        String      @default("")
  description String
  photos      String[]    @default([])
  address     String
  contact     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  status     String?
  interests   Interest[]
}

model Interest {
  id              String   @id @default(uuid())
  note            String
  contact         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  shippingAddress String
  givingId        String
  givings         Giving   @relation(fields: [givingId], references: [id])
}
